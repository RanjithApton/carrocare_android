<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout android:orientation="horizontal" android:id="@+id/ll" android:layout_width="match_parent" android:layout_height="wrap_content">
        <TextView android:textSize="@dimen/medtext" android:textColor="@color/black" android:gravity="center" android:layout_gravity="left|center_vertical|center_horizontal|center" android:id="@+id/date" android:padding="@dimen/padding" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1" android:fontFamily="@font/josefinsans_regular"/>
        <View android:background="@color/gray" android:layout_width="1dp" android:layout_height="match_parent"/>
        <TextView android:textSize="@dimen/medtext" android:textColor="@color/black" android:gravity="center" android:layout_gravity="left|center_vertical|center_horizontal|center" android:id="@+id/paymentid" android:padding="@dimen/padding" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1" android:fontFamily="@font/josefinsans_regular"/>
        <View android:background="@color/gray" android:layout_width="1dp" android:layout_height="match_parent"/>
        <TextView android:textSize="@dimen/medtext" android:textColor="@color/black" android:gravity="center" android:layout_gravity="left|center_vertical|center_horizontal|center" android:id="@+id/amount" android:padding="@dimen/padding" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1.1" android:fontFamily="@font/josefinsans_regular"/>
        <View android:background="@color/gray" android:layout_width="1dp" android:layout_height="match_parent"/>
        <TextView android:textSize="@dimen/medtext" android:textColor="@color/black" android:gravity="center" android:layout_gravity="left|center_vertical|center_horizontal|center" android:id="@+id/status" android:padding="@dimen/padding" android:layout_width="match_parent" android:layout_height="wrap_content" android:layout_weight="1.1" android:fontFamily="@font/josefinsans_regular"/>
        <View android:background="@color/gray" android:layout_width="1dp" android:layout_height="match_parent"/>
    </LinearLayout>
    <View android:background="@color/gray" android:layout_width="match_parent" android:layout_height="1dp" android:layout_below="@+id/ll"/>
</RelativeLayout>
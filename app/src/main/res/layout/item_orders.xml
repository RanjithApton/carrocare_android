<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:id="@+id/cardorder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="9dp"
        app:cardBackgroundColor="@color/white"
        android:elevation="7dp"
        android:fitsSystemWindows="true"
        app:cardUseCompatPadding="true"
        android:layout_margin="@dimen/margin"
        app:cardPreventCornerOverlap="true"
        app:cardElevation="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/vec_makemodel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:textColor="@color/black"
                    android:text=""
                    android:layout_weight="1"
                    android:gravity="left"
                    android:padding="@dimen/paddinglow"
                    android:fontFamily="@font/josefinsans_bold"
                    android:textSize="@dimen/bigtext"/>
                <TextView
                    android:id="@+id/package_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:textColor="@color/black"
                    android:gravity="left"
                    android:layout_weight="1"
                    android:padding="@dimen/paddinglow"
                    android:fontFamily="@font/josefinsans_bold"
                    android:textSize="@dimen/bigtext"/>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:orientation="horizontal">
                    <TextView
                        android:id="@+id/payment_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:gravity="center|left"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:padding="@dimen/padding"
                        android:fontFamily="@font/josefinsans_regular"
                        android:textSize="@dimen/bigtext"/>
                    <TextView
                        android:id="@+id/vec_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:textColor="@color/black"
                        android:text=""
                        android:layout_weight="1"
                        android:gravity="left"
                        android:padding="@dimen/padding"
                        android:fontFamily="@font/josefinsans_regular"
                        android:textSize="@dimen/bigtext"/>
                </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginRight="@dimen/margin"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:textColor="@color/black"
                    android:gravity="center|left"
                    android:layout_weight="1"
                    android:padding="@dimen/padding"
                    android:fontFamily="@font/josefinsans_regular"
                    android:textSize="@dimen/bigtext"/>
                <TextView
                        android:id="@+id/service_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:textColor="@color/black"
                        android:text=""
                        android:padding="@dimen/padding"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:fontFamily="@font/josefinsans_regular"
                        android:textSize="@dimen/bigtext"/>

            </LinearLayout>



                <Button
                    android:id="@+id/view_more"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/marginmed"
                    android:layout_marginBottom="@dimen/marginmed"
                    android:background="@drawable/login_bg"
                    android:fontFamily="@font/josefinsans_bold"
                    android:gravity="center"
                    android:paddingLeft="@dimen/paddinghigh"
                    android:paddingRight="@dimen/paddinghigh"
                    android:text="View More"
                    android:textColor="@color/white"
                    android:textSize="@dimen/bigtext"
                    android:textStyle="bold" />



        </LinearLayout>
    </androidx.cardview.widget.CardView>
    </LinearLayout>


</RelativeLayout>
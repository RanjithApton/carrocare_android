<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:id="@+id/cardorder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp"
            app:cardBackgroundColor="@color/white"
            android:elevation="7dp"
            android:fitsSystemWindows="true"
            app:cardUseCompatPadding="true"
            android:layout_margin="@dimen/margin"
            app:cardPreventCornerOverlap="true"
            app:cardElevation="5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:textColor="@color/dark_gray"
                        android:text="Order : "
                        android:layout_weight="5"
                        android:gravity="left"
                        android:padding="@dimen/paddinglow"
                        android:fontFamily="@font/josefinsans_regular"
                        android:textSize="@dimen/medtext"/>
                    <TextView
                        android:id="@+id/payment_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:textColor="@color/black"
                        android:layout_weight="1"
                        android:padding="@dimen/paddinglow"
                        android:fontFamily="@font/josefinsans_bold"
                        android:textSize="@dimen/bigtext"/>
                </LinearLayout>

                <View
                    android:background="@color/gray"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"/>

                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin"
                    android:orientation="horizontal">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/txt1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/dark_gray"
                            android:text="Date : "
                            android:fontFamily="@font/josefinsans_regular"
                            android:textSize="@dimen/medtext"
                            tools:ignore="MissingConstraints" />
                        <TextView
                            app:layout_constraintTop_toBottomOf="@+id/txt1"
                            android:id="@+id/date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|left"
                            android:textColor="@color/black"
                            android:gravity="center|left"
                            android:layout_weight="1"
                            android:fontFamily="@font/josefinsans_regular"
                            android:textSize="@dimen/bigtext"
                            tools:ignore="MissingConstraints" />
                        <TextView
                            android:visibility="gone"
                            app:layout_constraintTop_toBottomOf="@+id/txt1"

                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|left"
                            android:textColor="@color/black"
                            android:gravity="left"
                            android:padding="@dimen/paddinglow"
                            android:fontFamily="@font/josefinsans_bold"
                            android:textSize="@dimen/bigtext"
                            tools:ignore="MissingConstraints" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <TextView
                        android:visibility="gone"
                        android:id="@+id/package_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:textColor="@color/black"
                        android:gravity="left"
                        android:layout_weight="1"
                        android:padding="@dimen/paddinglow"
                        android:fontFamily="@font/josefinsans_bold"
                        android:textSize="@dimen/bigtext"/>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/txt2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/dark_gray"
                            android:text="Mode of Delivery : "
                            android:fontFamily="@font/josefinsans_regular"
                            android:textSize="@dimen/medtext"
                            tools:ignore="MissingConstraints" />
                        <TextView
                            app:layout_constraintTop_toBottomOf="@+id/txt2"
                            android:id="@+id/service_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|left"
                            android:textColor="@color/black"
                            android:gravity="center|left"
                            android:layout_weight="1"
                            android:fontFamily="@font/josefinsans_regular"
                            android:textSize="@dimen/bigtext"
                            tools:ignore="MissingConstraints" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginRight="@dimen/margin"
                    android:orientation="horizontal">
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/txt3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/dark_gray"
                            android:text="Plate Number : "
                            android:fontFamily="@font/josefinsans_regular"
                            android:textSize="@dimen/medtext"
                            tools:ignore="MissingConstraints" />
                        <TextView
                            app:layout_constraintTop_toBottomOf="@+id/txt3"
                            android:id="@+id/vec_no"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|left"
                            android:textColor="@color/black"
                            android:gravity="center|left"
                            android:layout_weight="1"
                            android:fontFamily="@font/josefinsans_regular"
                            android:textSize="@dimen/bigtext"
                            tools:ignore="MissingConstraints" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/txt4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/dark_gray"
                            android:text="Vechile Type : "
                            android:fontFamily="@font/josefinsans_regular"
                            android:textSize="@dimen/medtext"
                            tools:ignore="MissingConstraints" />
                        <TextView
                            app:layout_constraintTop_toBottomOf="@+id/txt4"
                            android:id="@+id/vec_makemodel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center|left"
                            android:textColor="@color/black"
                            android:gravity="center|left"
                            android:layout_weight="1"
                            android:fontFamily="@font/josefinsans_regular"
                            android:textSize="@dimen/bigtext"
                            tools:ignore="MissingConstraints" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginRight="@dimen/margin"
                    android:orientation="horizontal">




                </LinearLayout>



                <Button
                    android:visibility="gone"
                    android:id="@+id/view_more"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/marginmed"
                    android:layout_marginBottom="@dimen/marginmed"
                    android:background="@drawable/login_bg"
                    android:fontFamily="@font/josefinsans_bold"
                    android:gravity="center"
                    android:paddingLeft="@dimen/paddinghigh"
                    android:paddingRight="@dimen/paddinghigh"
                    android:text="View More"
                    android:textColor="@color/white"
                    android:textSize="@dimen/bigtext"
                    android:textStyle="bold" />



            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>


</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="13dp"
        app:cardBackgroundColor="@color/white"
        android:elevation="7dp"
        android:fitsSystemWindows="true"
        app:cardUseCompatPadding="true"
        app:cardPreventCornerOverlap="true"
        app:cardElevation="9dp">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/cart_car_img"
                    android:layout_width="150dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:scaleType="centerCrop"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp">

                    <TextView
                        android:id="@+id/cart_model"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:textColor="#000"
                        android:text="Audi - a6"
                        android:textAllCaps="true"
                        android:layout_marginLeft="@dimen/margin"
                        android:layout_marginTop="@dimen/log_top"
                        android:fontFamily="@font/josefinsans_bold"
                        android:textSize="@dimen/medtext"/>

                    <TextView
                        android:id="@+id/cart_veno"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:textColor="#000"
                        android:text="TN 0 A 1234"
                        android:layout_marginLeft="@dimen/margin"
                        android:layout_marginTop="@dimen/log_top"
                        android:fontFamily="@font/josefinsans_regular"
                        android:textSize="@dimen/medtext"/>

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/cart_action"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:textColor="@color/colorPrimary"
                        android:text="Daily Car Wash"
                        android:textAllCaps="true"
                        android:layout_marginLeft="@dimen/margin"
                        android:layout_marginTop="@dimen/log_top"
                        android:fontFamily="@font/josefinsans_bold"
                        android:textSize="@dimen/medtext"/>

                    <TextView
                        android:id="@+id/cart_serice"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:textColor="@color/colorPrimary"
                        android:text="Wash"
                        android:textAllCaps="true"
                        android:fontFamily="@font/josefinsans_bold"
                        android:layout_marginLeft="@dimen/margin"
                        android:layout_marginRight="@dimen/margin"
                        android:layout_marginTop="@dimen/log_top"
                        android:ellipsize="end"
                        android:textSize="@dimen/bigtext"/>

                    <TextView
                        android:id="@+id/cart_package"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:textColor="#000"
                        android:text="SUV"
                        android:visibility="gone"
                        android:fontFamily="@font/josefinsans_regular"
                        android:layout_marginLeft="@dimen/margin"
                        android:layout_marginRight="@dimen/margin"
                        android:layout_marginTop="@dimen/log_top"
                        android:ellipsize="end"
                        android:textSize="@dimen/bigtext"/>

                    <TextView
                        android:id="@+id/cart_sub_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:textColor="#000"
                        android:text="1 Month"
                        android:fontFamily="@font/josefinsans_regular"
                        android:layout_marginLeft="@dimen/margin"
                        android:layout_marginRight="@dimen/margin"
                        android:layout_marginTop="@dimen/log_top"
                        android:ellipsize="end"
                        android:textSize="@dimen/bigtext"/>

                    <TextView
                        android:id="@+id/car_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:text="â‚¹ 0"
                        android:textColor="@color/black"
                        android:layout_marginLeft="@dimen/margin"
                        android:layout_marginRight="@dimen/margin"
                        android:layout_marginTop="@dimen/log_top"
                        android:fontFamily="@font/josefinsans_bold"
                        android:textSize="@dimen/bigtext"/>

                </LinearLayout>




            </LinearLayout>

            <Button
                android:id="@+id/remove"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Remove from cart"
                android:textAllCaps="false"
                android:gravity="center"
                android:fontFamily="@font/josefinsans_bold"
                android:textSize="@dimen/bigtext"
                android:textColor="@color/white"
                android:background="@color/colorPrimary"
                android:layout_marginTop="@dimen/marginmed"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>




</RelativeLayout>
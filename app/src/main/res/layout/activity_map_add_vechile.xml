<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context=".activity.MapAddVechileActivity">

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/back"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/back"
                    android:padding="5dp"
                    android:layout_gravity="center|left"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:layout_weight="1"
                        android:textColor="#FFF"
                        android:text="Add Vehicle"
                        android:textAllCaps="true"
                        android:fontFamily="@font/josefinsans_bold"
                        android:textSize="@dimen/heading"/>
                    <TextView
                        android:id="@+id/header_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:layout_weight="1"
                        android:textColor="#FFF"
                        android:textStyle="bold"
                        android:visibility="gone"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Welcome to the Regal Car Wash !!"
                        android:textSize="@dimen/bigtext"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/header"
            android:background="@drawable/bg">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/marginlow"
                android:orientation="vertical">
                <RelativeLayout
                    android:id="@+id/vec_category_rl"
                    android:layout_width="match_parent"
                    android:visibility="visible"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_bg"
                        android:layout_margin="@dimen/marginhalf">
                        <TextView
                            android:id="@+id/vec_category_edt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textSize="@dimen/bigtext"
                            android:padding="@dimen/paddinghigh"
                            android:inputType="text"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:background="@color/white"
                            android:fontFamily="@font/josefinsans_light"
                            android:layout_marginRight="35dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:hint="Vehicle Category"/>
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/down_arrow"
                            android:layout_centerVertical="true"
                            android:padding="@dimen/paddinglow"
                            android:layout_alignParentRight="true"/>
                        <!--                <android.support.v7.widget.AppCompatSpinner-->
                        <!--                    android:id="@+id/make_model_edt"-->
                        <!--                    android:layout_width="match_parent"-->
                        <!--                    android:layout_height="wrap_content"-->
                        <!--                    android:paddingLeft="@dimen/paddinglow"-->
                        <!--                    android:paddingRight="@dimen/paddinglow"/>-->
                    </RelativeLayout>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/makemodel_rl"
                    android:layout_width="match_parent"
                    android:visibility="visible"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/edit_bg"
                        android:layout_margin="@dimen/marginhalf">
                        <TextView
                            android:id="@+id/make_model_edt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:textSize="@dimen/bigtext"
                            android:padding="@dimen/paddinghigh"
                            android:inputType="text"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:background="@color/white"
                            android:fontFamily="@font/josefinsans_light"
                            android:layout_marginRight="35dp"
                            android:layout_marginLeft="3dp"
                            android:layout_marginTop="3dp"
                            android:layout_marginBottom="3dp"
                            android:hint="Make and Model"/>
                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/down_arrow"
                            android:layout_centerVertical="true"
                            android:padding="@dimen/paddinglow"
                            android:layout_alignParentRight="true"/>
                        <!--                <android.support.v7.widget.AppCompatSpinner-->
                        <!--                    android:id="@+id/make_model_edt"-->
                        <!--                    android:layout_width="match_parent"-->
                        <!--                    android:layout_height="wrap_content"-->
                        <!--                    android:paddingLeft="@dimen/paddinglow"-->
                        <!--                    android:paddingRight="@dimen/paddinglow"/>-->
                    </RelativeLayout>
                </RelativeLayout>

                <EditText
                    android:id="@+id/vec_no_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/bigtext"
                    android:padding="@dimen/paddinghigh"
                    android:background="@drawable/edit_bg"
                    android:inputType="text"
                    android:singleLine="true"
                    android:layout_margin="@dimen/marginhalf"
                    android:textColor="@color/black"
                    android:imeOptions="actionNext"
                    android:fontFamily="@font/josefinsans_light"
                    android:hint="Vehicle No."/>
                <EditText
                    android:id="@+id/vec_color_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/bigtext"
                    android:padding="@dimen/paddinghigh"
                    android:background="@drawable/edit_bg"
                    android:inputType="text"
                    android:singleLine="true"
                    android:layout_margin="@dimen/marginhalf"
                    android:textColor="@color/black"
                    android:imeOptions="actionNext"
                    android:fontFamily="@font/josefinsans_light"
                    android:hint="Vehicle Color"/>

                <EditText
                    android:visibility="gone"
                    android:id="@+id/address_edt"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/bigtext"
                    android:padding="@dimen/paddinghigh"
                    android:background="@drawable/edit_bg"
                    android:inputType="none"
                    android:drawableRight="@drawable/ic_gps"
                    android:editable="false"
                    android:focusable="false"
                    android:lines="3"
                    android:layout_margin="@dimen/marginhalf"
                    android:textColor="@color/black"
                    android:imeOptions="actionDone"
                    android:fontFamily="@font/josefinsans_light"
                    android:hint="Address"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="95dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/bg"
                    android:layout_margin="@dimen/marginmed">
                    <Button
                        android:id="@+id/cancel_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cancel"
                        android:fontFamily="@font/josefinsans_bold"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:textSize="@dimen/bigtext"
                        android:layout_weight="1"
                        android:background="@drawable/login_bg"
                        android:textAllCaps="true"
                        android:layout_margin="@dimen/margin" />
                    <Button
                        android:id="@+id/submit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Submit"
                        android:layout_weight="1"
                        android:fontFamily="@font/josefinsans_bold"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:textSize="@dimen/bigtext"
                        android:background="@drawable/login_bg"
                        android:textAllCaps="true"
                        android:layout_margin="@dimen/margin"
                        />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

        <RelativeLayout
            android:id="@+id/apart_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/trans"
                android:gravity="center">
                <androidx.cardview.widget.CardView
                    android:id="@+id/card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="11dp"
                    app:cardBackgroundColor="@color/white"
                    android:elevation="7dp"
                    android:fitsSystemWindows="true"
                    app:cardUseCompatPadding="true"
                    android:layout_margin="@dimen/margin"
                    app:cardPreventCornerOverlap="true"
                    app:cardElevation="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:gravity="center"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:background="@color/colorPrimary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:layout_marginRight="10dp"
                                android:layout_marginLeft="10dp"
                                android:textColor="@color/black"
                                android:gravity="center_vertical"
                                android:id="@+id/rv_search"
                                android:layout_weight="1"
                                android:singleLine="true"
                                android:maxLength="25"
                                android:background="@drawable/search_back"
                                android:padding="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Search"
                                android:drawableLeft="@drawable/ic_search"
                                android:drawablePadding="5dp"
                                android:drawableTint="@color/black"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/vec_category_rc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                android:layout_margin="@dimen/marginmed">

                            </androidx.recyclerview.widget.RecyclerView>
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/makemodel_rc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                android:layout_margin="@dimen/marginmed">

                            </androidx.recyclerview.widget.RecyclerView>
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/apartlist_rc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                android:layout_margin="@dimen/marginmed">

                            </androidx.recyclerview.widget.RecyclerView>
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/preferredschedule_rc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                android:layout_margin="@dimen/marginmed">

                            </androidx.recyclerview.widget.RecyclerView>
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/preferredtime_rc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                android:layout_margin="@dimen/marginmed">

                            </androidx.recyclerview.widget.RecyclerView>
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/parkingArea_rc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:visibility="gone"
                                android:layout_margin="@dimen/marginmed">

                            </androidx.recyclerview.widget.RecyclerView>
                        </LinearLayout>
                        <Button
                            android:layout_marginRight="10dp"
                            android:layout_gravity="right|bottom"
                            android:id="@+id/rv_cancel"
                            android:text="Cancel"
                            android:background="@drawable/btn_round"
                            android:textColor="@color/white"
                            android:textAllCaps="false"
                            android:layout_alignParentBottom="true"
                            android:layout_width="100dp"
                            android:layout_height="40dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>
</layout>
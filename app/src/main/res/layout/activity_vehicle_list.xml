<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context=".activity.VehicleListActivity">
        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/back"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/back"
                    android:padding="@dimen/padding"
                    android:layout_gravity="center|left"
                    />
                <TextView
                    android:id="@+id/header_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_weight="1"
                    android:textColor="#FFF"
                    android:fontFamily="@font/josefinsans_bold"
                    android:textAllCaps="true"
                    android:textSize="@dimen/heading"/>

                <RelativeLayout
                    android:layout_gravity="center"
                    android:layout_marginRight="@dimen/marginmed"
                    android:layout_width="25dp"
                    android:layout_height="25dp">

                    <ImageView
                        android:id="@+id/check_cart"
                        android:layout_gravity="center|right"
                        android:src="@drawable/ic_cart"
                        android:layout_width="25dp"
                        android:layout_height="25dp"/>

                    <TextView
                        android:id="@+id/cart_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"
                        android:gravity="center"
                        android:fontFamily="@font/josefinsans_bold"
                        android:layout_centerHorizontal="true"
                        android:textSize="8sp"
                        android:textColor="@color/white"
                        android:background="@drawable/rounded_textview"/>

                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/header"
            android:background="@drawable/bg">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/marginlow"
                android:paddingBottom="90dp"
                android:clipToPadding="false"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/car_details_heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:fontFamily="@font/josefinsans_semibold"
                    android:layout_marginBottom="@dimen/margin"
                    android:layout_marginTop="@dimen/marginmed"
                    android:layout_marginLeft="@dimen/margin"
                    android:textSize="@dimen/heading"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="2dp"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginBottom="@dimen/margin"
                    android:background="@drawable/add_bg"/>
                <TextView
                    android:id="@+id/car_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:fontFamily="@font/josefinsans_light"
                    android:layout_margin="@dimen/margin"
                    android:textSize="@dimen/bigtext"/>
                <TextView
                    android:id="@+id/sub_price_heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:fontFamily="@font/josefinsans_semibold"
                    android:layout_marginBottom="@dimen/margin"
                    android:layout_marginTop="@dimen/marginhalf"
                    android:layout_marginLeft="@dimen/margin"
                    android:textSize="@dimen/heading"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="2dp"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginBottom="@dimen/margin"
                    android:background="@drawable/add_bg"/>
                <TextView
                    android:id="@+id/sub_price"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:fontFamily="@font/josefinsans_bold"
                    android:layout_margin="@dimen/margin"
                    android:textSize="@dimen/bigtext"/>
                <TextView
                    android:id="@+id/select_vehicle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:fontFamily="@font/josefinsans_semibold"
                    android:layout_marginBottom="@dimen/margin"
                    android:layout_marginTop="@dimen/marginhalf"
                    android:layout_marginLeft="@dimen/margin"
                    android:textSize="@dimen/heading"/>
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="2dp"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginBottom="@dimen/margin"
                    android:background="@drawable/add_bg"/>
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/carslist_rc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone">

                </androidx.recyclerview.widget.RecyclerView>
                <LinearLayout
                    android:id="@+id/novehicle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:src="@drawable/tyre"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:text="No vehicles added yet"
                        android:fontFamily="@font/josefinsans_regular"
                        android:layout_marginBottom="@dimen/margin"
                        android:layout_marginTop="@dimen/marginhalf"
                        android:layout_marginLeft="@dimen/margin"
                        android:textSize="@dimen/heading"/>
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <LinearLayout
            android:id="@+id/bottom_ll"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:background="@drawable/bg"
            android:layout_alignParentBottom="true"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:orientation="horizontal">
            <Button
                android:id="@+id/addvehicle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/add_bg"
                android:text="Add vehicle"
                android:textColor="@color/white"
                android:textSize="@dimen/bigtext"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@font/josefinsans_bold"
                android:paddingLeft="@dimen/fifty"
                android:layout_margin="20dp"
                android:paddingRight="@dimen/fifty"/>

            <Button
                android:visibility="gone"
                android:id="@+id/makepayment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/add_bg"
                android:text="Make payment"
                android:textColor="@color/white"
                android:textSize="@dimen/bigtext"
                android:layout_gravity="center"
                android:gravity="center"
                android:fontFamily="@font/josefinsans_bold"
                android:paddingLeft="@dimen/fifty"
                android:layout_margin="20dp"
                android:paddingRight="@dimen/fifty"/>
        </LinearLayout>

    </RelativeLayout>
</layout>
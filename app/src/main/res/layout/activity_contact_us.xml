<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context=".activity.ContactUsActivity">

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/back"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center|left"
                    android:layout_margin="10dp"
                    android:padding="@dimen/padding"
                    android:src="@drawable/back" />

                <TextView
                    android:id="@+id/header_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_weight="1"
                    android:fontFamily="@font/josefinsans_bold"
                    android:text="Contact Us"
                    android:textAllCaps="true"
                    android:textColor="#FFF"
                    android:textSize="@dimen/heading" />
            </LinearLayout>
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/header"
            android:background="@drawable/bg">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:orientation="vertical"
                android:paddingBottom="?attr/actionBarSize">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin"
                        android:elevation="5dp"
                        android:fitsSystemWindows="true"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="9dp"
                        app:cardElevation="5dp"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/margin"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/padding">

                            <TextView
                                android:id="@+id/quick"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|left"
                                android:layout_weight="1"
                                android:fontFamily="@font/josefinsans_bold"
                                android:text="Contact Us"
                                android:textColor="@color/black"
                                android:textSize="@dimen/heading" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|left"
                                android:layout_marginTop="@dimen/margin"
                                android:layout_weight="1"
                                android:fontFamily="@font/josefinsans_regular"
                                android:text="If you have any questions simply use the following contact details"
                                android:textSize="@dimen/bigtext" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center|left"
                                    android:elevation="7dp"
                                    android:fitsSystemWindows="true"
                                    app:cardBackgroundColor="@color/colorPrimary"
                                    app:cardCornerRadius="9dp"
                                    app:cardElevation="5dp"
                                    app:cardPreventCornerOverlap="true"
                                    app:cardUseCompatPadding="true">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:padding="@dimen/paddinghigh">

                                        <ImageView
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:padding="@dimen/padding"
                                            android:src="@drawable/address" />

                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center|left"
                                        android:layout_marginLeft="@dimen/margin"
                                        android:layout_marginTop="5dp"
                                        android:fontFamily="@font/josefinsans_bold"
                                        android:text="Address"
                                        android:textAllCaps="true"
                                        android:textColor="#000"
                                        android:textSize="@dimen/bigtext" />

                                    <TextView
                                        android:id="@+id/address_txt"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center|left"
                                        android:layout_marginLeft="@dimen/margin"
                                        android:layout_marginTop="5dp"
                                        android:fontFamily="@font/josefinsans_light"
                                        android:text="@string/address"
                                        android:textColor="#000"
                                        android:textSize="@dimen/bigtext" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center|left"
                                    android:elevation="7dp"
                                    android:fitsSystemWindows="true"
                                    app:cardBackgroundColor="@color/colorPrimary"
                                    app:cardCornerRadius="9dp"
                                    app:cardElevation="5dp"
                                    app:cardPreventCornerOverlap="true"
                                    app:cardUseCompatPadding="true">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:padding="@dimen/paddinghigh">

                                        <ImageView
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:padding="@dimen/padding"
                                            android:src="@drawable/call" />

                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center|left"
                                        android:layout_marginLeft="@dimen/margin"
                                        android:layout_marginTop="5dp"
                                        android:fontFamily="@font/josefinsans_bold"
                                        android:text="Phone"
                                        android:textAllCaps="true"
                                        android:textColor="#000"
                                        android:textSize="@dimen/bigtext" />

                                    <TextView
                                        android:id="@+id/phone_txt"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center|left"
                                        android:layout_marginLeft="@dimen/margin"
                                        android:layout_marginTop="5dp"
                                        android:fontFamily="@font/josefinsans_light"
                                        android:text="@string/phone"
                                        android:textColor="#000"
                                        android:textSize="@dimen/bigtext" />
                                </LinearLayout>
                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <androidx.cardview.widget.CardView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center|left"
                                    android:elevation="7dp"
                                    android:fitsSystemWindows="true"
                                    app:cardBackgroundColor="@color/colorPrimary"
                                    app:cardCornerRadius="9dp"
                                    app:cardElevation="5dp"
                                    app:cardPreventCornerOverlap="true"
                                    app:cardUseCompatPadding="true">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:padding="@dimen/paddinghigh">

                                        <ImageView
                                            android:layout_width="30dp"
                                            android:layout_height="30dp"
                                            android:padding="@dimen/padding"
                                            android:src="@drawable/mail" />

                                    </LinearLayout>
                                </androidx.cardview.widget.CardView>

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:orientation="vertical">

                                    <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center|left"
                                        android:layout_marginLeft="@dimen/margin"
                                        android:layout_marginTop="5dp"
                                        android:fontFamily="@font/josefinsans_bold"
                                        android:text="Email"
                                        android:textAllCaps="true"
                                        android:textColor="#000"
                                        android:textSize="@dimen/bigtext" />

                                    <TextView
                                        android:id="@+id/Email_txt"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_gravity="center|left"
                                        android:layout_marginLeft="@dimen/margin"
                                        android:layout_marginTop="5dp"
                                        android:fontFamily="@font/josefinsans_light"
                                        android:text="@string/email"
                                        android:textColor="#000"
                                        android:textSize="@dimen/bigtext" />
                                </LinearLayout>
                            </LinearLayout>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin"
                        android:elevation="7dp"
                        android:fitsSystemWindows="true"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="9dp"
                        app:cardElevation="5dp"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:id="@+id/whatsapp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:orientation="horizontal"
                            android:padding="10dp">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/whatsapp_icon" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/josefinsans_regular"
                                android:text="Send Message"
                                android:textColor="@color/black" />

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin"
                        android:elevation="7dp"
                        android:fitsSystemWindows="true"
                        android:visibility="gone"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="9dp"
                        app:cardElevation="5dp"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/margin"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/padding">
                            <!--            <fragment-->
                            <!--                android:id="@+id/map"-->
                            <!--                android:layout_width="match_parent"-->
                            <!--                android:layout_height="140dp"/>-->

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="@dimen/margin"
                        android:elevation="7dp"
                        android:fitsSystemWindows="true"
                        android:visibility="gone"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="9dp"
                        app:cardElevation="5dp"
                        app:cardPreventCornerOverlap="true"
                        app:cardUseCompatPadding="true">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/margin"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="@dimen/padding">

                            <TextView
                                android:id="@+id/sendmess"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|left"
                                android:layout_weight="1"
                                android:fontFamily="@font/josefinsans_bold"
                                android:text="Send Message Us"
                                android:textColor="@color/black"
                                android:textSize="@dimen/heading" />

                            <EditText
                                android:id="@+id/name_edt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_margin="@dimen/marginhalf"
                                android:background="@drawable/edit_bg"
                                android:fontFamily="@font/josefinsans_light"
                                android:hint="Your Name"
                                android:imeOptions="actionNext"
                                android:inputType="text"
                                android:padding="@dimen/paddinghigh"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textSize="@dimen/bigtext" />

                            <EditText
                                android:id="@+id/mobno_edt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_margin="@dimen/marginhalf"
                                android:background="@drawable/edit_bg"
                                android:fontFamily="@font/josefinsans_light"
                                android:hint="Your Mobile No"
                                android:imeOptions="actionNext"
                                android:inputType="number"
                                android:maxLength="10"
                                android:padding="@dimen/paddinghigh"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textSize="@dimen/bigtext" />

                            <EditText
                                android:id="@+id/email_edt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_margin="@dimen/marginhalf"
                                android:background="@drawable/edit_bg"
                                android:fontFamily="@font/josefinsans_light"
                                android:hint="Your Email ID"
                                android:imeOptions="actionNext"
                                android:inputType="textEmailAddress"
                                android:padding="@dimen/paddinghigh"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textSize="@dimen/bigtext" />

                            <EditText
                                android:id="@+id/subject_edt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_margin="@dimen/marginhalf"
                                android:background="@drawable/edit_bg"
                                android:fontFamily="@font/josefinsans_light"
                                android:hint="Subject"
                                android:imeOptions="actionNext"
                                android:inputType="textEmailSubject"
                                android:padding="@dimen/paddinghigh"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textSize="@dimen/bigtext" />

                            <EditText
                                android:id="@+id/message_edt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_centerVertical="true"
                                android:layout_margin="@dimen/marginhalf"
                                android:background="@drawable/edit_bg"
                                android:fontFamily="@font/josefinsans_light"
                                android:hint="Your Message"
                                android:imeOptions="actionDone"

                                android:inputType="text"
                                android:lines="3"
                                android:padding="@dimen/paddinghigh"
                                android:textColor="@color/black"
                                android:textSize="@dimen/bigtext" />

                            <Button
                                android:id="@+id/submit"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="@dimen/marginhalf"
                                android:background="@drawable/login_bg"
                                android:fontFamily="@font/josefinsans_bold"
                                android:paddingLeft="@dimen/fifty"
                                android:paddingRight="@dimen/fifty"
                                android:text="Submit"
                                android:textAllCaps="true"
                                android:textColor="@color/white"
                                android:textSize="@dimen/bigtext" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <TextView
                        android:id="@+id/dev_company"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:layout_weight="1"
                        android:fontFamily="@font/josefinsans_regular"
                        android:gravity="center"
                        android:text="@string/develop"
                        android:textSize="@dimen/bigtext" />
                </LinearLayout>
            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>
</layout>
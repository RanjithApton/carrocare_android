<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context=".activity.ProfileActivity">
        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:orientation="vertical"
            android:gravity="center">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/back"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/back"
                    android:padding="@dimen/padding"
                    android:layout_gravity="center|left"
                    />
                <TextView
                    android:id="@+id/header_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_weight="1"
                    android:textColor="#FFF"
                    android:text="Profile Details"
                    android:textAllCaps="true"
                    android:fontFamily="@font/josefinsans_bold"
                    android:textSize="@dimen/heading"/>
            </LinearLayout>
        </LinearLayout>
        <ScrollView
            android:layout_below="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:text="Welcome to the Carro Care !!"
                    android:layout_weight="1"
                    android:fontFamily="@font/josefinsans_regular"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/marginhigh"
                    android:layout_marginLeft="@dimen/marginhalf"
                    android:layout_marginBottom="@dimen/marginhalf"
                    android:textSize="@dimen/bigtext"/>
                <TextView
                    android:id="@+id/name_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/bigtext"
                    android:padding="@dimen/paddinghigh"
                    android:background="@drawable/edit_bg"
                    android:inputType="text"
                    android:singleLine="true"
                    android:layout_margin="@dimen/marginhalf"
                    android:fontFamily="@font/josefinsans_light"
                    android:hint="Full Name"/>
                <TextView
                    android:id="@+id/email_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/bigtext"
                    android:padding="@dimen/paddinghigh"
                    android:background="@drawable/edit_bg"
                    android:inputType="textEmailAddress"
                    android:singleLine="true"
                    android:layout_margin="@dimen/marginhalf"
                    android:fontFamily="@font/josefinsans_light"
                    android:hint="Email Address"/>
                <TextView
                    android:id="@+id/mobile_edt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/bigtext"
                    android:padding="@dimen/paddinghigh"
                    android:background="@drawable/edit_bg"
                    android:inputType="number"
                    android:maxLength="10"
                    android:singleLine="true"
                    android:layout_margin="@dimen/marginhalf"
                    android:fontFamily="@font/josefinsans_light"
                    android:hint="Mobile No."/>
                <LinearLayout
                    android:id="@+id/apartment_fields"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/edit_bg"
                            android:layout_margin="@dimen/marginhalf">

                            <TextView
                                android:id="@+id/apartname_edt"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center|left"
                                android:textColor="#000"
                                android:lines="3"
                                android:hint="Apartment Name"
                                android:gravity="center|left"
                                android:fontFamily="@font/josefinsans_light"
                                android:textSize="@dimen/bigtext"
                                android:layout_marginRight="35dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="3dp"
                                android:layout_marginBottom="3dp"/>
                            <ImageView
                                android:id="@+id/apartname_img"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:src="@drawable/ic_baseline_arrow_forward_ios_24"
                                android:layout_centerVertical="true"
                                android:padding="@dimen/padding"
                                android:rotation="90"
                                android:layout_alignParentRight="true"/>
                            <!--                <android.support.v7.widget.AppCompatSpinner-->
                            <!--                    android:id="@+id/apartname_edt"-->
                            <!--                    android:layout_width="match_parent"-->
                            <!--                    android:layout_height="wrap_content"-->
                            <!--                    android:padding="@dimen/paddinglow"/>-->
                        </RelativeLayout>
                    </RelativeLayout>
                    <EditText
                        android:id="@+id/apartbuilding_edt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/bigtext"
                        android:padding="@dimen/paddinghigh"
                        android:background="@drawable/edit_bg"
                        android:inputType="text"
                        android:singleLine="true"
                        android:layout_margin="@dimen/marginhalf"
                        android:fontFamily="@font/josefinsans_light"
                        android:hint="Apartment Building"/>
                    <EditText
                        android:id="@+id/flatno_edt"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:textSize="@dimen/bigtext"
                        android:padding="@dimen/paddinghigh"
                        android:background="@drawable/edit_bg"
                        android:inputType="text"
                        android:singleLine="true"
                        android:layout_margin="@dimen/marginhalf"
                        android:fontFamily="@font/josefinsans_light"
                        android:hint="Flat Number"/>
                </LinearLayout>

                <EditText
                    android:visibility="gone"
                    android:id="@+id/address_edt"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:lines="3"
                    android:layout_centerVertical="true"
                    android:textSize="@dimen/bigtext"
                    android:padding="@dimen/paddinghigh"
                    android:drawableRight="@drawable/ic_gps"
                    android:background="@drawable/edit_bg"
                    android:layout_margin="@dimen/marginhalf"
                    android:fontFamily="@font/josefinsans_light"
                    android:inputType="none"
                    android:editable="false"
                    android:focusable="false"
                    android:hint="Address"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_margin="@dimen/marginmed">
                    <Button
                        android:id="@+id/cancel_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cancel"
                        android:layout_weight="1"
                        android:fontFamily="@font/josefinsans_bold"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:textSize="@dimen/bigtext"
                        android:background="@drawable/login_bg"
                        android:textAllCaps="true"
                        android:layout_margin="@dimen/margin" />
                    <Button
                        android:id="@+id/Update"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Update"
                        android:layout_weight="1"
                        android:fontFamily="@font/josefinsans_bold"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:textSize="@dimen/bigtext"
                        android:background="@drawable/login_bg"
                        android:textAllCaps="true"
                        android:layout_margin="@dimen/margin"
                        />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
        <RelativeLayout
            android:id="@+id/apart_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/trans"
                android:gravity="center">
                <androidx.cardview.widget.CardView
                    android:id="@+id/card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="11dp"
                    app:cardBackgroundColor="@color/white"
                    android:elevation="7dp"
                    android:fitsSystemWindows="true"
                    app:cardUseCompatPadding="true"
                    android:layout_margin="@dimen/margin"
                    app:cardPreventCornerOverlap="true"
                    app:cardElevation="5dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <LinearLayout
                            android:gravity="center"
                            android:paddingTop="5dp"
                            android:paddingBottom="5dp"
                            android:background="@color/colorPrimary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <EditText
                                android:layout_marginRight="10dp"
                                android:layout_marginLeft="10dp"
                                android:textColor="@color/black"
                                android:gravity="center_vertical"
                                android:id="@+id/rv_search"
                                android:layout_weight="1"
                                android:singleLine="true"
                                android:maxLength="25"
                                android:background="@drawable/search_back"
                                android:padding="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:hint="Search"
                                android:drawableLeft="@drawable/ic_search"
                                android:drawablePadding="5dp"
                                android:drawableTint="@color/black"/>

                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/apartlist_rc"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="@dimen/marginmed">

                            </androidx.recyclerview.widget.RecyclerView>
                        </LinearLayout>
                        <Button
                            android:layout_marginRight="10dp"
                            android:layout_gravity="right|bottom"
                            android:id="@+id/rv_cancel"
                            android:text="Cancel"
                            android:background="@drawable/btn_round"
                            android:textColor="@color/white"
                            android:textAllCaps="false"
                            android:layout_alignParentBottom="true"
                            android:layout_width="100dp"
                            android:layout_height="40dp"/>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout></layout>
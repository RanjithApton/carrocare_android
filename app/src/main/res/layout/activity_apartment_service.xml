<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context=".activity.ApartmentServiceActivity">

        <LinearLayout
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/back"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center|left"
                android:layout_margin="10dp"
                android:padding="@dimen/padding"
                android:src="@drawable/back" />

            <TextView
                android:id="@+id/header_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_weight="1"
                android:fontFamily="@font/josefinsans_bold"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/heading" />

            <ImageView
                android:id="@+id/info"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="right|center|center_horizontal|center_vertical"
                android:layout_margin="10dp"
                android:padding="@dimen/padding"
                android:src="@drawable/info"
                android:visibility="gone" />
        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/header"
            android:background="@drawable/bg">

            <LinearLayout
                android:id="@+id/apartment_service"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/car_wash"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/padding">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:elevation="5dp"
                                android:fitsSystemWindows="true"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="7dp"
                                app:cardElevation="3dp"
                                app:cardPreventCornerOverlap="true"
                                app:cardUseCompatPadding="true">

                                <ImageView
                                    android:id="@+id/wash1"
                                    android:layout_width="match_parent"
                                    android:layout_height="130dp"
                                    android:layout_gravity="center"
                                    android:padding="@dimen/marginhalf"
                                    android:src="@drawable/home_car_wash" />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/josefinsans_regular"
                            android:gravity="center"
                            android:text="Daily Car Wash"
                            android:textAllCaps="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/medtext" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/car_disinfection"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/padding">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:elevation="5dp"
                                android:fitsSystemWindows="true"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="7dp"
                                app:cardElevation="3dp"
                                app:cardPreventCornerOverlap="true"
                                app:cardUseCompatPadding="true">

                                <ImageView
                                    android:id="@+id/disinf"
                                    android:layout_width="match_parent"
                                    android:layout_height="130dp"
                                    android:layout_gravity="center"
                                    android:padding="@dimen/marginhalf"
                                    android:src="@drawable/car_disinsfection" />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/josefinsans_regular"
                            android:gravity="center"
                            android:text="Car Disinfection"
                            android:textAllCaps="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/medtext" />
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/bike_wash"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:padding="@dimen/padding">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:elevation="5dp"
                                android:fitsSystemWindows="true"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="7dp"
                                app:cardElevation="3dp"
                                app:cardPreventCornerOverlap="true"
                                app:cardUseCompatPadding="true">

                                <ImageView
                                    android:id="@+id/wash11"
                                    android:layout_width="match_parent"
                                    android:layout_height="130dp"
                                    android:layout_gravity="center"
                                    android:padding="@dimen/marginhalf"
                                    android:src="@drawable/bile_wash" />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/josefinsans_regular"
                            android:gravity="center"
                            android:text="Bike Wash"
                            android:textAllCaps="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/medtext" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/car_service"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/padding">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:elevation="5dp"
                                android:fitsSystemWindows="true"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="7dp"
                                app:cardElevation="3dp"
                                app:cardPreventCornerOverlap="true"
                                app:cardUseCompatPadding="true">

                                <ImageView
                                    android:id="@+id/wash2"
                                    android:layout_width="match_parent"
                                    android:layout_height="130dp"
                                    android:layout_gravity="center"
                                    android:padding="@dimen/marginhalf"
                                    android:src="@drawable/home_wax_polish" />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/josefinsans_regular"
                            android:gravity="center"
                            android:text="Wax Polish"
                            android:textAllCaps="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/medtext" />
                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="5dp"
                    android:layout_marginBottom="10dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/extra_interior"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:padding="@dimen/padding">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:elevation="5dp"
                                android:fitsSystemWindows="true"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="7dp"
                                app:cardElevation="3dp"
                                app:cardPreventCornerOverlap="true"
                                app:cardUseCompatPadding="true">

                                <ImageView
                                    android:id="@+id/wash21"
                                    android:layout_width="match_parent"
                                    android:layout_height="130dp"
                                    android:layout_gravity="center"
                                    android:padding="@dimen/marginhalf"
                                    android:src="@drawable/home_extra_int" />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/josefinsans_regular"
                            android:gravity="center"
                            android:text="Extra Interior"
                            android:textAllCaps="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/medtext" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="fill"
                        android:layout_marginBottom="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:id="@+id/my_vechicle"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:padding="@dimen/padding">

                            <androidx.cardview.widget.CardView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_margin="10dp"
                                android:layout_weight="1"
                                android:elevation="5dp"
                                android:fitsSystemWindows="true"
                                app:cardBackgroundColor="@color/white"
                                app:cardCornerRadius="7dp"
                                app:cardElevation="3dp"
                                app:cardPreventCornerOverlap="true"
                                app:cardUseCompatPadding="true">

                                <ImageView
                                    android:id="@+id/vechicle"
                                    android:layout_width="match_parent"
                                    android:layout_height="130dp"
                                    android:layout_gravity="center"
                                    android:padding="@dimen/marginhalf"
                                    android:src="@drawable/home_my_vehicle" />
                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/josefinsans_regular"
                            android:gravity="center"
                            android:text="My Vehicles"
                            android:textAllCaps="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/medtext" />
                    </LinearLayout>


                </LinearLayout>


            </LinearLayout>


        </ScrollView>

    </RelativeLayout>
</layout>
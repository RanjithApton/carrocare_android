<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rel_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone">

        <androidx.cardview.widget.CardView
            android:id="@+id/card1"
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:layout_margin="@dimen/margin"
            android:elevation="7dp"
            android:fitsSystemWindows="true"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="13dp"
            app:cardElevation="7dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="true"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/car_img1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />
        </androidx.cardview.widget.CardView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/linearLayout2"
            android:layout_width="match_parent"
            android:layout_height="390dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/marginmed"
            android:orientation="vertical"
            app:layout_constraintTop_toBottomOf="@+id/card1"
            tools:layout_editor_absoluteX="10dp">

            <TextView
                android:id="@+id/car_name1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginTop="@dimen/marginmed"
                android:layout_marginBottom="@dimen/marginmed"
                android:layout_weight="1"
                android:fontFamily="@font/josefinsans_bold"
                android:textAllCaps="true"
                android:textColor="#000"
                android:textSize="@dimen/ultrapara"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/car_desc1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_marginLeft="@dimen/margin"
                android:layout_marginTop="@dimen/marginmed"
                android:layout_marginBottom="@dimen/marginmed"
                android:layout_weight="1"
                android:fontFamily="@font/josefinsans_light"
                android:textColor="#000"
                android:textSize="@dimen/heading"
                app:layout_constraintTop_toBottomOf="@+id/car_name1"
                tools:ignore="MissingConstraints" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@drawable/bg_card_shadow"
            android:gravity="center"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:id="@+id/car_price1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|left"
                android:layout_margin="@dimen/margin"
                android:fontFamily="@font/josefinsans_bold"
                android:gravity="center"
                android:paddingLeft="@dimen/marginhigh"
                android:paddingTop="@dimen/marginlow"
                android:paddingRight="@dimen/marginhigh"
                android:paddingBottom="@dimen/marginlow"
                android:text="Total Amount"
                android:textColor="@color/black"
                android:textSize="@dimen/heading" />

            <Button
                android:id="@+id/booknow1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:background="@drawable/login_bg"
                android:fontFamily="@font/josefinsans_bold"
                android:gravity="center"
                android:paddingLeft="@dimen/marginhigh"
                android:paddingRight="@dimen/marginhigh"
                android:text="Book now"
                android:textColor="@color/white"
                android:textSize="@dimen/heading"
                android:textStyle="bold" />
        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="7dp"
        android:fitsSystemWindows="true"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="13dp"
        app:cardElevation="9dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp">

            <ImageView
                android:id="@+id/car_img"
                android:layout_width="140dp"
                android:layout_height="match_parent"
                android:scaleType="centerCrop" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/car_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/josefinsans_bold"
                    android:textAllCaps="true"
                    android:textColor="#000"
                    android:textSize="@dimen/bigtext" />
                <!--                <TextView-->
                <!--                    android:id="@+id/starts_from"-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:layout_gravity="center|left"-->
                <!--                    android:text="STARTS FROM"-->
                <!--                    android:fontFamily="@font/roboto_light"-->
                <!--                    android:textColor="#000"-->
                <!--                    android:layout_marginBottom="@dimen/margin"-->
                <!--                    android:layout_marginTop="@dimen/marginmed"-->
                <!--                    android:layout_marginLeft="@dimen/margin"-->
                <!--                    android:textSize="12sp"/>-->
                <TextView
                    android:id="@+id/car_desc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center|left"
                    android:layout_marginLeft="@dimen/margin"
                    android:layout_marginRight="@dimen/margin"
                    android:layout_marginBottom="@dimen/margin"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/josefinsans_light"
                    android:lines="2"
                    android:textColor="#000"
                    android:textSize="@dimen/bigtext" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/car_price"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center|left"
                        android:layout_margin="@dimen/margin"
                        android:layout_weight="1"
                        android:fontFamily="@font/josefinsans_bold"
                        android:text="â‚¹ 0"
                        android:textColor="@color/black"
                        android:textSize="@dimen/bigtext" />

                    <Button
                        android:id="@+id/booknow"
                        android:layout_width="wrap_content"
                        android:layout_height="33dp"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/margin"
                        android:layout_marginRight="@dimen/margin"
                        android:background="@drawable/login_bg"
                        android:fontFamily="@font/roboto_bold"
                        android:gravity="center"
                        android:paddingLeft="15dp"
                        android:paddingRight="15dp"
                        android:text="Book now"
                        android:textColor="@color/white"
                        android:textSize="@dimen/lighttext"
                        android:visibility="gone" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>
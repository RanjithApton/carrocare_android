<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <!--    <style name="TestSpinnerStyle" parent="android:style/Widget.ListView.DropDown">-->
    <!--        <item name="android:divider">#ff0000</item>-->
    <!--        <item name="android:dividerHeight">5dp</item>-->
    <!--    </style>-->

    <style name="TextViewSpinnerItem" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
    </style>
    <style name="SampleTheme" parent="@android:style/Theme.Holo.Light">
        <item name="android:spinnerDropDownItemStyle">@style/TextViewSpinnerItem</item>
    </style>
    <style name="BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/josefinsans_regular</item>
    </style>
    <style name="SpinnerTheme" parent="Widget.AppCompat.Spinner">
        <item name="fontFamily">@font/josefinsans_regular</item>
    </style>


    <style name="CustomCheckbox" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:button">@drawable/checkbox_button</item>
    </style>

    <style name="DefalutCheckBox" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:button">@drawable/checkbox_button_sample</item>
    </style>

    <style name="Checkboxgreen" parent="@style/Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:button">@drawable/checkbox_button_green</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

</resources>
